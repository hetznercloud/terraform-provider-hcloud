{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_uploaded_certificate" "{{ .RName }}" {
  name        = "{{ .Name }}--{{ .RInt }}"
  private_key =<<EOT
{{ .PrivateKey | trim }}
  EOT
  certificate =<<EOT
{{ .Certificate | trim }}
  EOT
  {{- if .Labels }}
    labels = {
    {{- range $k,$v := .Labels }}
      {{ $k }} = "{{ $v }}"
    {{- end }}
  }
  {{- end }}
}
