{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_storage_box_snapshot" "{{ .RName }}" {
  storage_box = {{ .StorageBox }}

  {{ if .Description -}}
  description = "{{ .Description }}"
  {{- end }}

  {{- if .Labels }}
  labels = {{ .Labels | toPrettyJson }}
  {{- end }}

  {{- if .Raw }}
  {{ .Raw | indent 2 }}
  {{- end }}
}
