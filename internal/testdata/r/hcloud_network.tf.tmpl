{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_network" "{{ .RName }}" {
  {{/* Required properties */ -}}
  name     = "{{ .Name }}--{{ .RInt }}"
  ip_range = "{{ .IPRange }}"

  {{- /* Optional properties */}}
  {{- if .Labels }}
  labels = {
  {{- range $k,$v := .Labels }}
    {{ $k }} = "{{ $v }}"
  {{- end }}
  }
  {{ end }}

  {{- if .DeleteProtection }}
  delete_protection = {{ .DeleteProtection }}
  {{ end }}
}
