{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_firewall" "{{ .RName }}" {
    name        = "{{ .Name }}--{{ .RInt }}"
{{- if .Rules }}
{{- range $v := .Rules }}
    rule {
        direction = "{{ $v.Direction }}"
        protocol = "{{ $v.Protocol }}"
{{- if $v.Port }}
        port = "{{ $v.Port }}"
{{- end }}
{{ if $v.SourceIPs -}}
        source_ips = [
{{- range $v := $v.SourceIPs }}
            "{{ $v }}",
{{- end }}
        ]
{{ end }}
{{ if $v.DestinationIPs -}}
        destination_ips = [
{{- range $v := $v.DestinationIPs }}
            "{{ $v }}",
{{- end }}
        ]
{{ end }}
{{ if $v.Description -}}
        description = "{{ $v.Description }}"
{{ end}}
    }
{{- end }}
{{- end }}
{{- if .ApplyTo }}
{{- range $v := .ApplyTo }}
   apply_to {
{{- if $v.Server }}
        server = "{{ $v.Server }}"
{{- end }}
{{- if $v.LabelSelector }}
        label_selector = "{{ $v.LabelSelector }}"
{{- end }}
   }
{{- end }}
{{- end }}
{{- if .Labels }}
    labels = {
    {{- range $k,$v := .Labels }}
      {{ $k }} = "{{ $v }}"
    {{- end }}
  }
  {{- end }}
}
