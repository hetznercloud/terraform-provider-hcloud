{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_floating_ip" "{{ .RName }}" {
  {{/* Required properties */ -}}
  name        = "{{ .Name }}--{{ .RInt }}"
  type = "{{ .Type }}"
  {{- if .HomeLocationName }}
  home_location       = "{{ .HomeLocationName }}"
  {{ end }}
  {{- if .ServerID }}
  server_id       = {{ .ServerID }}
  {{ end }}

  {{- if .Labels }}
  labels = {
  {{- range $k,$v := .Labels }}
    {{ $k }} = "{{ $v }}"
  {{- end }}
  }
  {{ end }}

  {{- if .DeleteProtection }}
  delete_protection = {{ .DeleteProtection }}
  {{ end }}
}
